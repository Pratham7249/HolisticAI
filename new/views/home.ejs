        <script>
            function animateCounter(target, duration, elementId) {
                let start = 0;
                const stepTime = Math.abs(Math.floor(duration / target));
                const counterElement = document.getElementById(elementId);

                const counter = setInterval(() => {
                    start += 1;
                    counterElement.innerHTML = start;
                    if (start === target) {
                        clearInterval(counter);
                    }
                }, stepTime);
            }

            // Start the counter animations
            document.addEventListener('DOMContentLoaded', function() {
                animateCounter(84, 3000, 'counter1'); // Count to 75 in 3 seconds
                animateCounter(10, 1500, 'counter2'); // Count to 42 in 4 seconds
                animateCounter(55, 3000, 'counter3'); // Count to 100 in 4 seconds
            });

